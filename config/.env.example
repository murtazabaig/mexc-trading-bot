# MEXC Futures Signal Bot - Environment Configuration
# Copy this file to `.env` and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Telegram Bot Configuration (Required)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Admin Chat ID (Required)
# Get your chat ID from @userinfobot on Telegram
TELEGRAM_ADMIN_CHAT_ID=your_telegram_admin_chat_id_here

# =============================================================================
# MEXC API CONFIGURATION (Optional for Public Endpoints)
# =============================================================================

# MEXC API Credentials (only needed for private endpoints)
# Get these from: https://www.mexc.com/user/openapi
MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here

# Use MEXC testnet instead of mainnet
MEXC_TESTNET=false

# =============================================================================
# DATABASE AND LOGGING CONFIGURATION
# =============================================================================

# Database path for storing signals, warnings, and paper trades
DATABASE_PATH=data/signals.db

# Log directory path
LOG_DIRECTORY=logs

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# SIGNAL GENERATION CONFIGURATION
# =============================================================================

# Scanning intervals (comma-separated list of timeframes)
# Valid values: 1m, 3m, 5m, 15m, 30m, 1h, 2h, 4h, 6h, 8h, 12h, 1d, 1w, 1M
SIGNAL_SCAN_INTERVALS=1h,4h,1d

# Maximum allowed spread percentage (filters out illiquid markets)
SIGNAL_MAX_SPREAD_PERCENT=0.5

# Minimum volume in USDT (filters out low-volume markets)
SIGNAL_MIN_VOLUME_USDT=10000.0

# Minimum ATR percentage (filters out low-volatility markets)
SIGNAL_ATR_PERCENT_MIN=1.0

# Maximum ATR percentage (filters out extremely volatile markets)
SIGNAL_ATR_PERCENT_MAX=50.0

# Minimum price (filters out low-priced assets)
SIGNAL_MIN_PRICE=0.01

# Maximum price (filters out extremely high-priced assets)
SIGNAL_MAX_PRICE=1000000.0

# =============================================================================
# TRADING AND RISK MANAGEMENT
# =============================================================================

# Enable paper trading mode (recommended for testing)
TRADING_PAPER_TRADING=true

# Maximum number of concurrent positions
TRADING_MAX_CONCURRENT_POSITIONS=5

# Position size as percentage of portfolio (1.0 = 1% of portfolio per position)
TRADING_POSITION_SIZE_PCT=2.0

# Stop loss percentage (1.0 = 1% loss triggers stop)
TRADING_STOP_LOSS_PCT=2.0

# Take profit percentage (1.0 = 1% profit target)
TRADING_TAKE_PROFIT_PCT=4.0

# Maximum drawdown percentage before halting
TRADING_MAX_DRAWDOWN_PCT=10.0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (production, development, testing)
ENVIRONMENT=production

# Debug mode
DEBUG=false

# =============================================================================
# NOTES
# =============================================================================
# - All paths are relative to the project root directory
# - For paper trading, no MEXC API credentials are needed
# - Values with '%' are percentages (e.g., 2.0 = 2%)
# - Volume values are in USDT
# - All boolean values should be 'true' or 'false' (lowercase)
# - Remove or comment out optional parameters you don't want to use